
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Accommodations can be read by anyone, but only written by authenticated users.
    match /accommodations/{accommodationId} {
      allow read: if true;
      allow write: if request.auth != null;

      // Rules for subcollections of accommodations
      match /{allChildren=**} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }

    // Curated collections can be read by anyone
    match /curated_collections/{collectionId} {
      allow read: if true;
      allow write: if request.auth != null; // Restrict writes
    }

    // User-specific data should be protected
    match /users/{userId}/{allChildren=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
